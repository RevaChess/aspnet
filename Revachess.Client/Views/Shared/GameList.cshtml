@model Revachess.Client.Models.UserViewModel
<div class="mx-auto align-middle" style="width: 300px;">
    <h2>Users</h2>
    @foreach (var item in ViewBag.Users)
    {
        <div class="row" style="padding: 10px; border-style: groove; background-color: LightGray;">
            <div class="col">
                @item.UserName
            </div>
            <div class="col">
                @* <asp:Button type="button" class="btn btn-primary btn-sm" style="float: right;" runat="server"
                    onclick="makeGame">
                    Play
                    </asp:Button> *@
                <form action="play" method="post">
                    <button type="submit" class="btn btn-primary btn-sm" style="float: right;" value=@item.UserName
                    asp-for="UserName">Play</button>
                </form>

            </div>

        </div>
    }
</div>
<div class="mx-auto align-middle" style="width: 300px;">
    <h2>Games</h2>
    @foreach (var item in ViewBag.Games)
    {
        <div class="row" style="padding: 10px; border-style: groove; background-color: LightGray;">
            <div class="col">
                @item.Name
            </div>
            <div class="col">
                <button type="button" class="btn btn-primary btn-sm" style="float: right;">Play</button>
            </div>

        </div>
    }
</div>
